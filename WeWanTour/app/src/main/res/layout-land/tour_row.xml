<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="match_parent"
            android:layout_height="262dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.033"
            app:srcCompat="@drawable/col" />

        <ImageView
            android:id="@+id/footer_img"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:alpha="0.4"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/back_img"
            app:layout_constraintTop_toTopOf="@+id/back_img"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/gradient_footer_item_tour" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="5dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="26dp"
            android:textStyle="bold"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@+id/footer_img"
            app:layout_constraintEnd_toStartOf="@+id/text_price"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/vehicle_img"
            app:layout_constraintTop_toTopOf="@+id/footer_img"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/vehicle_img"
            android:layout_width="48dp"
            android:layout_height="47dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/footer_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/footer_img"
            app:srcCompat="@drawable/ic_directions_walk_black_24dp" />

        <TextView
            android:id="@+id/text_price"
            android:layout_width="105dp"
            android:layout_height="68dp"
            android:alpha="0.7"
            android:autoSizeMaxTextSize="30dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/gradient_text_price"
            android:gravity="center"
            android:maxLines="1"
            android:text="TextView"
            android:textColor="#3949AB"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/footer_img"
            app:layout_constraintEnd_toEndOf="@+id/footer_img"
            app:layout_constraintTop_toTopOf="@+id/footer_img"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="29dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/footer_img"
            app:layout_constraintStart_toEndOf="@+id/vehicle_img"
            app:layout_constraintTop_toBottomOf="@+id/text_name"
            app:layout_constraintVertical_bias="0.642"
            app:srcCompat="@drawable/ic_date_black_24dp" />

        <TextView
            android:id="@+id/text_date"
            android:layout_width="89dp"
            android:layout_height="21dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.583" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="27dp"
            android:layout_height="21dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/text_date"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.642"
            app:srcCompat="@drawable/ic_time_black_24dp" />

        <TextView
            android:id="@+id/text_hour"
            android:layout_width="89dp"
            android:layout_height="21dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toStartOf="@+id/text_price"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.583" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.cardview.widget.CardView>