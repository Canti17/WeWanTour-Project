<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <item name="colorControlNormal">@color/whiteTextColor</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>



    </style>


    <style name="InputTextAppTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/primaryTextColor</item>
    </style>


    <style name="HintTextStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- For the forms -->
    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="formHeader">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="modifiedEditText">
        <item name="android:textSize">@dimen/newsMoreTextSize</item>
        <item name="android:backgroundTint">@color/primaryTextColor</item>
        <item name="android:textColorHint">@color/hintTextColor</item>
        <item name="android:textColor">@color/blackTextColor</item>
        <item name="android:layout_width">@dimen/formEditTextWidth</item>
        <item name="android:layout_height">@dimen/formEditTextHeight</item>
    </style>

    <style name="modifiedSubmitButton">
        <item name="android:background">@drawable/modified_submit_button</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="modifiedDateTimeButton">
        <item name="android:background">@drawable/modified_date_time_button</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextInputLayout">
        <item name="android:layout_width">@dimen/formEditTextWidth</item>

        <item name="hintTextAppearance">@style/AppTheme.TextFloatLabelAppearance</item>
        <!-- Ho usato una Height diversa perchè il "container" deve essere più grande altrimenti
         l'EditText non si vede bene -->
        <item name="android:layout_height">@dimen/formEditTextLayoutHeight</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:backgroundTint">@color/primaryTextColor</item>
        <item name="android:layout_width">@dimen/formEditTextWidth</item>
        <item name="android:layout_height">@dimen/formEditTextHeight</item>
    </style>


