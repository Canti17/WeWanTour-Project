<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#C33131"
    app:cardCornerRadius="6dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="-4dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_start_hour"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.928"
            app:srcCompat="@drawable/ic_person_black_24dp" />

        <Button
            android:id="@+id/btn_delete_reservation"
            android:layout_width="66dp"
            android:layout_height="23dp"
            android:background="#E15252"
            android:shadowRadius="10"
            android:text="DELETE"
            android:textColor="#FBFBFB"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/text_cost"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.937"
            app:layout_constraintStart_toEndOf="@+id/tour_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.142" />

        <TextView
            android:id="@+id/tour_name"
            android:layout_width="192dp"
            android:layout_height="33dp"
            android:text="Tour name"
            android:textColor="#000000"
            android:textSize="22dp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toTopOf="@+id/img_tour"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.064"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.066" />

        <TextView
            android:id="@+id/text_start_hour"
            android:layout_width="60dp"
            android:layout_height="31dp"
            android:layout_marginBottom="12dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView10"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.936" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="35dp"
            android:layout_height="33dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_start_place"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.962"
            app:srcCompat="@drawable/ic_time_black_24dp" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="35dp"
            android:layout_height="33dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transport_info"
            app:srcCompat="@drawable/ic_place_black_24dp" />

        <ImageView
            android:id="@+id/imageView13IconForListTransportPrenotation"
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="136dp"
            app:layout_constraintStart_toEndOf="@+id/img_tour"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/destination" />

        <TextView
            android:id="@+id/text_destination"
            android:layout_width="157dp"
            android:layout_height="46dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="TextView"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.076"
            app:layout_constraintStart_toEndOf="@+id/imageView13IconForListTransportPrenotation"
            app:layout_constraintTop_toBottomOf="@+id/text_cost" />

        <TextView
            android:id="@+id/text_start_place"
            android:layout_width="149dp"
            android:layout_height="41dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="12dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView12"
            app:layout_constraintTop_toBottomOf="@+id/transport_info"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="15dp"
            android:background="#3F3939"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView11" />

        <ImageView
            android:id="@+id/img_tour"
            android:layout_width="147dp"
            android:layout_height="92dp"
            android:layout_marginTop="84dp"

            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.032"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/col" />

        <TextView
            android:id="@+id/text_cost"
            android:layout_width="92dp"
            android:layout_height="26dp"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="48dp"
            android:text="â‚¬ 80.30"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageView13IconForListTransportPrenotation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/cost"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_tour"
            app:srcCompat="@drawable/ic_date_black_24dp" />

        <TextView
            android:id="@+id/tour_date"
            android:layout_width="99dp"
            android:layout_height="27dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/imageView11"
            app:layout_constraintTop_toBottomOf="@+id/img_tour" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="35dp"
            android:layout_height="31dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@+id/tour_date"
            app:layout_constraintTop_toBottomOf="@+id/imageView13IconForListTransportPrenotation"
            app:srcCompat="@drawable/ic_time_black_24dp" />

        <TextView
            android:id="@+id/tour_hour"
            android:layout_width="90dp"
            android:layout_height="23dp"
            android:layout_marginTop="16dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView15"
            app:layout_constraintTop_toBottomOf="@+id/text_destination" />

        <TextView
            android:id="@+id/general_info"
            android:layout_width="101dp"
            android:layout_height="21dp"
            android:layout_marginTop="48dp"
            android:text="General Info"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.039"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/transport_info"
            android:layout_width="102dp"
            android:layout_height="21dp"
            android:layout_marginTop="4dp"
            android:text="Transport Info "
            android:textSize="16sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.034"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/cost"
            android:layout_width="99dp"
            android:layout_height="22dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Total Cost :"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/imageView13IconForListTransportPrenotation"
            app:layout_constraintStart_toEndOf="@+id/img_tour"
            app:layout_constraintTop_toBottomOf="@+id/general_info"
            app:layout_constraintVertical_bias="0.333" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintStart_toEndOf="@+id/tour_hour"
            app:layout_constraintTop_toBottomOf="@+id/text_destination"
            app:layout_constraintVertical_bias="0.631"
            app:srcCompat="@drawable/ic_person_black_24dp" />

        <TextView
            android:id="@+id/num_people"
            android:layout_width="57dp"
            android:layout_height="22dp"
            android:layout_marginStart="4dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView16"
            app:layout_constraintTop_toBottomOf="@+id/text_destination"
            app:layout_constraintVertical_bias="0.68" />

        <TextView
            android:id="@+id/transportCurrPeople"
            android:layout_width="51dp"
            android:layout_height="27dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="12dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView14"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.925" />

        <ImageView
            android:id="@+id/tour_vhc"
            android:layout_width="38dp"
            android:layout_height="26dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/cost"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.023"
            app:layout_constraintStart_toEndOf="@+id/general_info"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.674"
            app:srcCompat="@drawable/ic_directions_walk_black_24dp" />

        <ImageView
            android:id="@+id/transport_vhc"
            android:layout_width="46dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/text_start_place"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.004"
            app:layout_constraintStart_toEndOf="@+id/transport_info"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.272"
            app:srcCompat="@drawable/bus" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>