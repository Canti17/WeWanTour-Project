<!--    NOTE: 1)android:fillViewport="true" is used to fix the scroll view bug with constraint layout
              2)the numeric field used for the cost and max people number is deprecated, search other?!
              3)no control on the city, street, civic, in the db are saved with the format city,street,civic
              4)change transport vehicle field-->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".add_transport">

                <TextView
                    android:id="@+id/NewTransportTitle"
                    style="@style/formHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="NEW TRANSPORT"
                    app:layout_constraintBottom_toTopOf="@+id/TransportStartCity"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.500"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.175" />

                <EditText
                    android:id="@+id/TransportStartStreet"
                    style="@style/modifiedEditText"
                    android:layout_width="196dp"
                    android:layout_height="53dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginBottom="10dp"
                    android:hint="Starting Street"
                    android:inputType="textPersonName"
                    app:layout_constraintBottom_toTopOf="@+id/TransportVehicle"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/TransportStartCivic"
                    style="@style/modifiedEditText"
                    android:layout_width="87dp"
                    android:layout_height="53dp"
                    android:layout_marginBottom="10dp"
                    android:hint="Civic"
                    android:inputType="textPersonName"
                    app:layout_constraintBottom_toTopOf="@+id/TransportVehicle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.236"
                    app:layout_constraintStart_toEndOf="@+id/TransportStartStreet" />

                <EditText
                    android:id="@+id/TransportStartCity"
                    style="@style/modifiedEditText"
                    android:layout_marginBottom="10dp"
                    android:hint="Starting City"
                    android:inputType="textPersonName"
                    app:layout_constraintBottom_toTopOf="@+id/TransportStartStreet"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.500"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/TransportVehicle"
                    style="@style/modifiedEditText"
                    android:layout_marginBottom="12dp"
                    android:hint="Transport Vehicle"
                    app:layout_constraintBottom_toTopOf="@+id/TransportDay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.500"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/TransportDateButton"
                    style="@style/modifiedDateTimeButton"
                    android:layout_width="113dp"
                    android:layout_height="48dp"
                    android:layout_alignBottom="@+id/TransportDay"
                    android:layout_marginBottom="18dp"
                    android:layout_toEndOf="@+id/TransportDay"
                    android:layout_toRightOf="@+id/TransportDay"
                    android:fontFamily="sans-serif-medium"
                    android:text="SELECT DATE"
                    app:layout_constraintBottom_toTopOf="@+id/TransportHourButton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.361"
                    app:layout_constraintStart_toEndOf="@+id/TransportDay" />

                <EditText
                    android:id="@+id/TransportDay"
                    style="@style/modifiedEditText"
                    android:layout_width="157dp"
                    android:layout_height="55dp"
                    android:layout_below="@+id/TransportHour"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="56dp"
                    android:layout_marginBottom="12dp"
                    android:editable="false"
                    android:hint="Start Date"
                    app:layout_constraintBottom_toTopOf="@+id/TransportHour"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/TransportHourButton"
                    style="@style/modifiedDateTimeButton"
                    android:layout_width="113dp"
                    android:layout_height="48dp"
                    android:layout_below="@+id/TransportDateButton"
                    android:layout_alignStart="@+id/TransportDateButton"
                    android:layout_alignLeft="@+id/TransportDateButton"
                    android:layout_marginEnd="52dp"
                    android:layout_marginBottom="16dp"
                    android:text="SELECT TIME"
                    app:layout_constraintBottom_toTopOf="@+id/TransportCost"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.969"
                    app:layout_constraintStart_toEndOf="@+id/TransportHour" />

                <EditText
                    android:id="@+id/TransportHour"
                    style="@style/modifiedEditText"
                    android:layout_width="156dp"
                    android:layout_height="55dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="56dp"
                    android:layout_marginBottom="10dp"
                    android:editable="false"
                    android:hint="Start Time"
                    app:layout_constraintBottom_toTopOf="@+id/TransportCost"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/TransportCost"
                    android:layout_marginBottom="10dp"
                    android:hint="Travel Cost â‚¬"
                    android:inputType="numberDecimal"
                    android:numeric="decimal"
                    app:layout_constraintBottom_toTopOf="@+id/TransportMaxPeople"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.500"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/modifiedEditText"
                    />

                <EditText
                    android:id="@+id/TransportMaxPeople"
                    android:layout_marginBottom="25dp"
                    android:hint="Max People Number"
                    android:inputType="number"
                    android:numeric="integer"
                    app:layout_constraintBottom_toTopOf="@+id/TransportSubmit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.500"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/modifiedEditText"
                    />

                <Button
                    android:id="@+id/TransportSubmit"
                    style="@style/modifiedSubmitButton"
                    android:layout_width="300dp"
                    android:layout_height="53dp"
                    android:layout_marginBottom="50dp"
                    android:text="Submit"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.486"
                    app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>