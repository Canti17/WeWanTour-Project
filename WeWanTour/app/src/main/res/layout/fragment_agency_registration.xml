<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:fillViewport="true">


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgencyFragmentRegistration">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/register_logo"
            style="@style/formHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/baloo"
            android:text="Registration"
            android:textAlignment="center"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fullname_text"
            style="@style/TextInputLayout"
            app:boxStrokeColor="#2661FA"
            app:errorEnabled="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_logo"
            app:layout_constraintVertical_bias="0.04000002"
            app:theme="@style/InputTextAppTheme">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fullname_field"
                style="@style/TextInputEditText"
                android:hint="Full Name"
                android:inputType="text"
                android:textColorLink="#2661FA"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/fullname_text"
                app:layout_constraintStart_toStartOf="@+id/fullname_text"
                app:layout_constraintTop_toTopOf="@+id/fullname_text" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/agencyname_text"
            style="@style/TextInputLayout"
            app:boxStrokeColor="#2661FA"
            app:errorEnabled="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fullname_text"
            app:layout_constraintVertical_bias="0.0"
            app:theme="@style/InputTextAppTheme">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/agency_name_field"
                style="@style/TextInputEditText"
                android:hint="Agency Name"
                android:inputType="text"
                android:textColorLink="#2661FA"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/fullname_text"
                app:layout_constraintStart_toStartOf="@+id/fullname_text"
                app:layout_constraintTop_toTopOf="@+id/fullname_text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_text"
            style="@style/TextInputLayout"
            app:boxStrokeColor="#2661FA"
            app:errorEnabled="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/agencyname_text"
            app:layout_constraintVertical_bias="0.0"
            app:theme="@style/InputTextAppTheme">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_field"
                style="@style/TextInputEditText"
                android:hint="Email"
                android:inputType="text"
                android:textColorLink="#2661FA"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/agencyname_text"
                app:layout_constraintStart_toStartOf="@+id/agencyname_text"
                app:layout_constraintTop_toTopOf="@+id/agencyname_text" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/iva_number"
            style="@style/TextInputLayout"
            app:boxStrokeColor="#2661FA"
            app:errorEnabled="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_text"
            app:layout_constraintVertical_bias="0.0"
            app:theme="@style/InputTextAppTheme">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/iva_number_field"
                style="@style/TextInputEditText"
                android:hint="IVA Number"
                android:inputType="numberDecimal"
                android:textColorLink="#2661FA"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/email_text"
                app:layout_constraintStart_toStartOf="@+id/email_text"
                app:layout_constraintTop_toTopOf="@+id/email_text" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.hbb20.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_width="120dp"
            android:layout_height="53dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@+id/iva_number"
            app:layout_constraintTop_toBottomOf="@+id/iva_number" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/telephone_number"
            style="@style/TextInputLayout"
            android:layout_width="180dp"
            app:boxStrokeColor="#2661FA"
            app:errorEnabled="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/iva_number"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintTop_toBottomOf="@+id/iva_number"
            app:layout_constraintVertical_bias="0.0"
            app:theme="@style/InputTextAppTheme">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/telephone_number_field"
                style="@style/TextInputEditText"
                android:layout_width="match_parent"
                android:hint="Mobile Phone"
                android:inputType="numberDecimal"
                android:textColorLink="#2661FA"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/iva_number"
                app:layout_constraintStart_toStartOf="@+id/iva_number"
                app:layout_constraintTop_toTopOf="@+id/iva_number" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_text"
            style="@style/TextInputLayout"
            app:boxStrokeColor="#2661FA"
            app:errorEnabled="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/telephone_number"
            app:layout_constraintVertical_bias="0.0"
            app:passwordToggleEnabled="false"
            app:theme="@style/InputTextAppTheme">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_field"
                style="@style/TextInputEditText"
                android:hint="Password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColorLink="#2661FA"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/telephone_number"
                app:layout_constraintStart_toStartOf="@+id/email_text"
                app:layout_constraintTop_toTopOf="@+id/telephone_number" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/confirmPassword_text"
            style="@style/TextInputLayout"
            app:boxStrokeColor="#2661FA"
            app:errorEnabled="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password_text"
            app:layout_constraintVertical_bias="0.0"
            app:passwordToggleEnabled="false"
            app:theme="@style/InputTextAppTheme">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/confirm_password_field"
                style="@style/TextInputEditText"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColorLink="#2661FA"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/password_text"
                app:layout_constraintStart_toStartOf="@+id/password_text"
                app:layout_constraintTop_toTopOf="@+id/password_text" />
        </com.google.android.material.textfield.TextInputLayout>


        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="37dp"
            android:layout_height="30dp"
            android:layout_marginTop="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirmPassword_text" />

        <TextView
            android:id="@+id/textViewprivacy"
            android:layout_width="276dp"
            android:layout_height="23dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="59dp"
            android:text="     I accept privacy condition"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/checkBox"
            app:layout_constraintTop_toBottomOf="@+id/confirmPassword_text" />


        <Button
            android:id="@+id/register_button"
            style="@style/modifiedSubmitButton"
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="60dp"
            android:text="CREATE ACCOUNT"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewprivacy"
            app:layout_constraintVertical_bias="0.0" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="55dp"
            android:layout_height="51dp"
            android:layout_marginStart="178dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="178dp"
            android:layout_marginBottom="39dp"
            android:progressTint="#009688"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_button" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>

</androidx.core.widget.NestedScrollView>